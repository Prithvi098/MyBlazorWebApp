@rendermode InteractiveServer

<div class="modal fade @(Show ? "show d-block" : "")" tabindex="-1" aria-hidden="true" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header @HeaderClass">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="OnCancel"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button class="btn btn-primary" @onclick="OnConfirm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure?";
    [Parameter] public string HeaderClass { get; set; } = "text-black";
    [Parameter] public EventCallback<bool> ConfirmationChanged { get; set; }

    private async Task OnConfirm()
    {
        await ConfirmationChanged.InvokeAsync(true);
    }

    private async Task OnCancel()
    {
        await ConfirmationChanged.InvokeAsync(false);
    }
}
